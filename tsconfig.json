{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "src",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true
    },
    "include": [
        "ts/*",
        "ts/**/*", "src/index.ts"
    ],
    "exclude": [
        "node_modules/*",
        "node_modules/**/*"
    ]
}